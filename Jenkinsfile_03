#!groovy

pipeline {
    environment {
        JAVA_TOOL_OPTIONS = "-Duser.home=/home/jenkins"
    }
    agent {
        dockerfile {
            label "docker"
            args "-v /tmp:/home/jenkins/.m2 -e MAVEN_CONFIG=/home/jenkins/.m2 -u root"
        }
    }

    stages {
        stage("Build") {
            steps {
                
                sh "mvn -version"
                sh "mvn clean install"
            }
        }
    }

   
}
